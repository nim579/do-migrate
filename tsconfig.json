{
	"compilerOptions": {
		"lib": [
			"es6",
			"es2021",
			"esnext"
		],
		"target": "ES2020",
		"module": "NodeNext",
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "nodenext",
		"rootDir": "./src",
		"outDir": "./lib",
		"esModuleInterop": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/**/*.d.ts",
			"./*.d.ts"
		]
	},
	"include": [
		"src/**/*"
	],
	"ts-node": {
		"esm": true,
		"files": true,
		"experimentalSpecifierResolution": "node"
	}
}
